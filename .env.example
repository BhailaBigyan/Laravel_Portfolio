# === App Config ===
APP_NAME=LaravelPortfolio
APP_ENV=production
APP_KEY=    # leave empty initially, will be generated automatically
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_LEVEL=info

# === Database (e.g. PlanetScale, Railway, or MySQL) ===
DB_CONNECTION=mysql
DB_HOST=your-database-host
DB_PORT=3306
DB_DATABASE=your-db-name
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password

# === Session and Cache ===
SESSION_DRIVER=file
CACHE_DRIVER=file

# === Queue ===
QUEUE_CONNECTION=sync

# === Mail (optional or use 'log') ===
